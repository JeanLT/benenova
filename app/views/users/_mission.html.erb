<%= link_to dashboard_booking_path(booking) do %>
  <div class="card-mission <%= 'canceled' if booking.status == 'declined' %>">
    <% if booking.status == 'declined' %>
      <div class="canceled-mission">
        <p>
          Annul√©e
        </p>
      </div>
    <% end %>
    <div class="card-picture" style="background-image: url(<%= cl_image_path(booking.mission.picture, height: 200, crop: :fill) %>);">
      <%= display_picto_cause(booking.mission.cause) %>
      <div class="card-count-places">
        <p><%= booking.mission.remaining_places %></p>
        <h3><%= label_for_remaining_places(booking.mission.remaining_places) %></h3>
      </div>
    </div>
    <div class="card-misson-infos">
      <div>
        <h4><%= display_date(booking.mission.datetime, booking.mission.duration) %></h4>
        <h2><%= booking.mission.title.capitalize %></h2>
        <p><%= booking.mission.description.capitalize %></p>
      </div>
    </div>
  </div>
<% end %>
