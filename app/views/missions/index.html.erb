<h1>Missions</h1>

<!-- FORM DROPDOWN -->

<div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Filtres
  </button>

  <div class="dropdown-menu">

    <%= form_tag missions_path, method: :get do %>
      <%= label_tag(:starting_date, "Dates") %>
      <%= text_field_tag :starting_date,
        params[:starting_date],
        class: "form-control",
        placeholder: "Date de début"
      %>
      <%= text_field_tag :ending_date,
        params[:ending_date],
        class: "form-control",
        placeholder: "Date de fin"
      %>
      <%= label_tag(:address, "Adresse") %>
      <%= text_field_tag :address,
        params[:address],
        class: "form-control",
        placeholder: "Adresse"
      %>
      <%= label_tag(:radius, "Dans un rayon de") %>
      <%= text_field_tag :radius,
        params[:radius],
        class: "form-control",
        placeholder: "Dans un rayon de"
      %>
      <%= label_tag(:duration, "Pour une durée de") %>
      <%= text_field_tag :duration,
        params[:duration],
        class: "form-control",
        placeholder: "Pour une durée de"
      %>
      <%= label_tag(:cause, "Cause (plusieurs choix possibles)") %>
      <%= text_field_tag :cause,
        params[:cause],
        class: "form-control",
        placeholder: "Cause (plusieurs choix possibles)"
      %>
      <%= submit_tag "C'est parti !", class: "btn btn-primary" %>
    <% end %>




</div>



<!-- MAP -->


<!-- MISSIONS INDEX -->



<div class="cards">
  <div class="row">
    <% @missions.each do |mission| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <%= link_to mission_path(mission) do %>
          <div class="card-mission">
            <div class="card-picture">
              <%= cl_image_tag(mission.picture, height: 200, crop: :fill) %>
              <p><%= display_picto_cause(mission.cause) %></p>
              <h3><%= mission.maxcapacity %> places restantes</h3>
            </div>
            <div class="card-misson-infos">
              <div>
                <p><%= display_date(mission.datetime, mission.duration) %></p>
                <h2><%= mission.title.capitalize %></h2>
                <p><%= mission.description.capitalize %></p>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>









