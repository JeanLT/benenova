<h1>Missions</h1>

<div
  id="map"
  style="width: 100%;
  height: 250px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<div>
  <% @missions.each do |mission| %>
    <%= cl_image_tag(mission.picture, height: 700, crop: :fill) %>
    <p><%= display_date(mission.datetime, mission.duration) %> </p>
    <h2><%= mission.title.capitalize %></h2>
    <p><%= mission.description.capitalize %></p>
  <% end %>
</div>
