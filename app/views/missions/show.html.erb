<div class="img-couv-mission">
	<%= cl_image_tag @mission.picture, crop: :thumb, gravity: :face, width: 40, height: 40, class: "full-picture-mission" %>
	<p><%= @mission.cause %></p>
</div>

<div class ="container">

	<div class="row justify-content-center">
		<div class="col-12 col-lg-8">
			<h3><%= @mission.title %></h3>
			<p><%= @mission.description %></p>
		</div>
	</div>

	<div class="row justify-content-center">
		<div class="col-12 col-lg-8">
			<h3><%= @partner.name %></h3>
			<p><%= @partner.description %></p>
		</div>
	</div>

	<div class="row justify-content-center">
		<div class="col-12 col-lg-8">
			<p><%= @mission.datetime %></p>
			<p><%= @mission.duration %></p>
			<p>@mission.address</p>
		</div>
	</div>
</div>

<div
  id="map"
  style="width: 100%;
  height: 250px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>
