<!-- BANNER -->
<div class="mission-couv banner d-flex " style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))">
	<div class="mission-couv d-flex">
		<%= cl_image_tag @mission.picture, width: 375, height: 200, crop: :fill, class: "mission-picture" %>
		<p><%= display_picto_cause(@mission.cause) %></p>
	</div>
</div>

<!-- CARDS -->
  <div class ="container-btn">
  	<div class="mission-details">
  		<h3><%= @mission.title %></h3>
  		<h4>MISSION</h4>
  		<p><%= @mission.description %></p>
  	</div>
  	<div class="association-details">
  		<h3><%= @partner.name %></h3>
  		<h4>PARTENAIRE</h4>
  		<div class="alignement-description-logo">
  			<%= cl_image_tag @partner.logo, crop: :thumb, gravity: :face, width: 40, height: 40, class: "avatar-extra-large partner-logo" %>
  			<p><%= @partner.description %></p>
  		</div>
  	</div>
  	<div class="mission-infos">
  		<div class="time">
  			<%= image_tag "calendar.png", class: "icon" %>
  			<p><%= @mission.datetime %></p>
  			<%= image_tag "heure.png", class: "icon" %>
  			<p><%= @mission.duration %></p>
  		</div>
  		<div class="localisation">
  			<%= image_tag "adresse-icone-png-7.png", class: "icon" %>
  			<p><%= @mission.address %></p>
  		</div>
  	</div>
  </div>

<!-- BUTTON -->
<% unless @already_volonteer %>
  <button type="button" class="btn btn-info confirm commitment" data-toggle="modal" data-target="#exampleModalLong">
    Je m'engage
  </button>
<% else %>
  <button type="button" class="btn btn-primary confirm commitment" data-toggle="modal" data-target="#exampleModalLong">
    Je souhaite annuler
  </button>
<% end %>

<!-- MAP -->
<br>
<div
  id="map"
  style="width: 100%;
  height: 250px;"
  data-markers="<%= @markers.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
</div>

<!-- Modal -->
<% unless @already_volonteer %>
  <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <!-- <div class="modal-header"> -->
          <!-- <h5 class="modal-title" id="exampleModalLongTitle">Modal title</h5> -->
          <button type="button" class="close croix" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        <!-- </div> -->
        <div class="modal-body">
          Etes-vous sûr de vouloir participer à cette action ?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-primary non" data-dismiss="modal">Non</button>
          <%= link_to "Oui bien sûr", mission_bookings_path(@mission), class: "btn btn-info oui", method: :post %>
        </div>
      </div>
    </div>
  </div>
<% end %>
